{
    "name": "Java Tomcat Codespace",
    "image": "mcr.microsoft.com/devcontainers/java:17",
    // "features": {
    //     "ghcr.io/devcontainers/features/maven:1": {}
    // },
    "forwardPorts": [8080],
    "portsAttributes": {
        "8080": {
            "label": "Tomcat",
            "onAutoForward": "openBrowser"
        }
    },
    "postCreateCommand": [
        "sudo apt-get update",
        "sudo apt-get install -y maven wget",
        "cd ~",
        "wget https://archive.apache.org/dist/tomcat/tomcat-9/v9.0.85/bin/apache-tomcat-9.0.85.tar.gz",
        "tar -xzf apache-tomcat-9.0.85.tar.gz",
        "chmod +x apache-tomcat-9.0.85/bin/*.sh"
    ]
}