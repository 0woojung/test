{
    "name": "Java Tomcat Codespace",
    "image": "mcr.microsoft.com/devcontainers/java:17",
    "features": {
        "ghcr.io/devcontainers/features/maven:1": {}
    },
    "forwardPorts": [8080],
    "portsAttributes": {
        "8080": {
            "label": "Tomcat",
            "onAutoForward": "openBrowser"
        }
    },
    "postCreateCommand": "sudo apt-get update && sudo apt-get install -y tomcat9"
}